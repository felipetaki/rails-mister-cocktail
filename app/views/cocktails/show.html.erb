<div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
  <ul>
    <% @cocktail.doses.all.each do |dose| %>
      <li>
        <%= dose.description %> - <%= dose.ingredient.name %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Back home", cocktails_path  %>
</div>
